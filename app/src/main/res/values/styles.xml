<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>\
        <item name="cornerRadius">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonTheme" parent="AppTheme">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="SpinnerTheme" parent="AppTheme">
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:popupBackground">@color/transparent</item>
    </style>
</resources>
