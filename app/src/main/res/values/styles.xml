<resources>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">#2B9CCC</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
        <item name="android:itemTextAppearance">@style/CustomMenuItem</item>
    </style>

    <style name="ButtonTheme" parent="FullScreenTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="SpinnerTheme" parent="FullScreenTheme">
        <item name="android:overlapAnchor">false</item>
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:popupBackground">@color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/transparent</item>
        <item name="closeIcon">@drawable/close_icon</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="collapseIcon">@drawable/back_icon</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="CustomMenuItem" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:elevation">16dp</item>
    </style>
</resources>
