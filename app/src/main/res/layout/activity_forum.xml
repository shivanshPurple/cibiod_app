<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context=".forumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonCard"
        app:layout_constraintTop_toBottomOf="@+id/towerDetails2">

        <EditText
            android:id="@+id/newPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:autofillHints="Serial No."
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/newPatientAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:autofillHints="@string/promptAzimuthAngle"
            android:fontFamily="sans-serif-light"
            android:hint="Age"
            android:inputType="number"
            android:selectAllOnFocus="true" />

        <EditText
            android:id="@+id/newPatientAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:autofillHints="@string/promptAddress"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Address"
            android:inputType="text" />

        <Spinner
            android:id="@+id/newPatientGender"
            style="@android:style/Widget.DeviceDefault.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:entries="@array/Gender"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <ImageView
        android:id="@+id/circleButton2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCard"
        app:layout_constraintEnd_toEndOf="@+id/buttonCard"
        app:layout_constraintStart_toStartOf="@+id/buttonCard"
        app:layout_constraintTop_toTopOf="@+id/buttonCard"
        app:srcCompat="@drawable/circle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonCard"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/addTower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/lightblue"
            android:fontFamily="sans-serif-thin"
            android:text="add location"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/towerDetails2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-thin"
        android:text="NEW PATIENT"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>